<UserControl x:Class="UserManagmentApp.Views.Usuarios.EditarUsuarioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserManagmentApp.Views.Usuarios"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Nombre:"/>
            <TextBox x:Name="txtNombre"/>
            <TextBlock Text="Apellido:"/>
            <TextBox x:Name="txtApellido"/>
            <TextBlock Text="Documento:"/>
            <TextBox x:Name="txtDocumento"/>
            <TextBlock Text="Correo electrónico:"/>
            <TextBox x:Name="txtCorreo"/>
        </StackPanel>
        <StackPanel Grid.Row="9" Orientation="Horizontal">
            <Button Content="Guardar" Width="100" Margin="5" Height="20" Command="{Binding GuardarUsuarioCommand}"/>
            <Button Content="Cancelar" Width="100" Margin="5" Height="20" Command="{Binding CancelarCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
